<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:id="@+id/popup"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    tools:context="com.example.terminator.skripsi.Tentang">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:gravity="center|right"
        android:background="@drawable/btn_rounded_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/gambar"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:src="@drawable/profile"
                android:layout_height="100dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-15dp"
                android:layout_marginLeft="11dp">
                <TextView
                    android:id="@+id/nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#fc0c0c"
                    android:layout_marginTop="25dp"
                    android:text="Nama       : Doni Saputra"/>
                <TextView
                    android:id="@+id/npm"
                    android:text="NPM         : 12312064"
                    android:textStyle="bold"
                    android:textColor="#fc0c0c"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Jurusan   : Fakultas teknik dan ilmu komputer"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#fc0c0c"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang Aplikasi"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#fc0c0c"/>
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/text"
                    android:layout_gravity="center_vertical|left"
                    android:textSize="17dp"
                    android:text=" Sebuah sistem informasi geografis (GIS) adalah sistem komputer yang dirancang untuk menangkap, menyimpan, memanipulasi, menganalisis, mengelola, dan menyajikan semua jenis data spasial atau geografis.Sistem Informasi Geografis Pada Android juga di dukung layanan google maps sehingga informasi yang di tampilkan lengkap dan akurat. Saat ini sudah banyak sekali dikembangkan aplikasi android dengan fungsi sistem informasi geografis. Bahkan tidak sekedar sistem informasi geografis android, kini mulai dikembangkan Location Base Service atau layanan berbasis lokasi sehingga masyarakat mendapatkan informasi yang disesuaikan dengan lokasi dengan mudah."
                    android:textColor="#fc0c0c"/>
                </RelativeLayout>
            </TableLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>
