<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/menu_background"
    tools:context="com.example.terminator.skripsi.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="17dp"
        android:textStyle="bold"
        android:text="SIG STUDIO FOTO DI BANDAR LAMPUNG"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/siger_lampung"
        android:layout_height="100dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="#FCE000"/>

    <GridLayout
        android:id="@+id/mainGrid"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="8"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="14dp"
        >

        <!-- Row 1 -->

        <!-- Column 1 -->
            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="120dp"
                android:background="@drawable/btn_rounded_white"
                android:layout_height="wrap_content">

                <ImageButton
                    android:src="@drawable/googlemaps"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/imgBtnLihatPeta"
                    android:layout_height="100dp" />

                <TextView
                    android:text="Lihat Peta"
                    android:textAlignment="center"
                    android:textColor="#fc0c0c"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:background="#7FFCE000"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        <!-- Column 2 -->
            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:background="@drawable/btn_rounded_white"
                android:layout_width="120dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:src="@drawable/ic_camera_"
                    android:id="@+id/camera"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />

                <TextView
                    android:text="Studio Foto"
                    android:textAlignment="center"
                    android:textColor="#fc0c0c"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:background="#7FFCE000"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        <!-- Row 2 -->

        <!-- Column 1 -->

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:background="@drawable/btn_rounded_white"
                android:layout_width="120dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:src="@drawable/about_1"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/btnTentang"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="115dp" />

                <TextView
                    android:text="Tentang"
                    android:textAlignment="center"
                    android:textColor="#fc0c0c"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#7FFCE000"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        <!-- Column 2 -->

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:background="@drawable/btn_rounded_white"
                android:layout_width="120dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:src="@drawable/exit_menu"
                    android:id="@+id/btnExit"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="115dp" />

                <TextView
                    android:text="Keluar"
                    android:textAlignment="center"
                    android:textColor="#fc0c0c"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#7FFCE000"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

    </GridLayout>


</LinearLayout>
